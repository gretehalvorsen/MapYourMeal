@{
    ViewData["Title"] = "Login Page";
}

<div class="container d-flex justify-content-center align-items-center" style="height: 80vh;">
    <div class="col-md-4">
        <h3 class="text-center mb-4">Log in to MapYourMeal</h3>
        <!-- Form posts to the login action in the Account controller -->
        <form method="post" action="@Url.Action("Login", "Account")">
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="d-grid gap-2">
                <!-- Button triggers form submission to the login action -->
                <button type="submit" class="btn btn-success">Log in</button>
            </div>
        </form>
        <div class="text-center mt-3">
            <p>Don't have an account? <a href="@Url.Action("signup", "Account")" class="nav-link">Sign up</a></p>
        </div>
    </div>
</div>
