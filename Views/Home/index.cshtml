@{
    ViewData["Title"] = "Home Page";
}

<!-- Search Section -->
<section class="search-section">
    <h1>MapYourMeal</h1>
    <p>Discover the best food in your area tailored to your dietary restrictions with MapYourMeal;<br> your go-to guide
        for finding diet-compatible dining options.</p>


    <!-- Search Bar -->
    <div class="d-flex justify-content-center">
        <select class="form-select form-select-lg me-2" style="max-width: 200px;" aria-label="Looking for">
            <option selected>I'm looking for...</option>
            <option value="1">Pizza</option>
            <option value="2">Pasta</option>
            <option value="2">Gluten free</option>
            <option value="2">Option</option>
        </select>
        <input type="text" class="form-control form-control-lg me-2" style="max-width: 300px;" placeholder="Oslo">
        <a href="@Url.Action("Index", "SearchResult")" class="btn btn-success btn-lg">View Restaurants</a>
    </div>

