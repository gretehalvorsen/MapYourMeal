@model MapYourMeal.Models.Restaurant

<h2>Delete Restaurant</h2>

<h3>Are you sure you want to delete this restaurant?</h3>
<div>
    <h4>Restaurant</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Restaurant Id</dt>
        <dd class="col-sm-10">@Model.RestaurantId</dd>

        <dt class="col-sm-2">Restaurant Name</dt>
        <dd class="col-sm-10">@Model.RestaurantName</dd>

        <dt class="col-sm-2">Longitude</dt>
        <dd class="col-sm-10">@Model.Longitude</dd>

        <dt class="col-sm-2">Latitude</dt>
        <dd class="col-sm-10">@Model.Latitude</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address, @Model.PostalCode, @Model.City</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10"><img src="@Url.Action("GetImage", new { id = Model.RestaurantId })" alt="Review Image" style="max-width: 80px; max-height: 80px;" /></dd>
    </dl> 
    
    <form asp-action="DeleteConfirmed" asp-route-RestaurantId="@Model.RestaurantId" method="post">
        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-action="Table" class="btn btn-secondary">Cancel</a>
    </form>
</div>