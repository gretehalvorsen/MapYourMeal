@model MapYourMeal.Models.Restaurant

<h2>Delete @Model.RestaurantName?</h2>
<br>
<h3>Are you sure you want to delete this restaurant and all of its reviews?</h3>
<br>
<div>
    <dl class="row">
        <dt class="col-sm-2">Restaurant Id</dt>
        <dd class="col-sm-10">@Model.RestaurantId</dd>

        <dt class="col-sm-2">Restaurant Name</dt>
        <dd class="col-sm-10">@Model.RestaurantName</dd>

        <dt class="col-sm-2">Longitude</dt>
        <dd class="col-sm-10">@Model.Longitude</dd>

        <dt class="col-sm-2">Latitude</dt>
        <dd class="col-sm-10">@Model.Latitude</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address, @Model.PostalCode, @Model.City</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10"><img src="@Url.Action("GetImage", new { id = Model.RestaurantId })" alt="Review Image" style="max-width: 240px; max-height: 240px;" /></dd>
    </dl> 
    
    <form asp-action="DeleteConfirmed" asp-route-RestaurantId="@Model.RestaurantId" method="post">
        <button type="submit" class="btn btn-primary" style="background-color: #2a5b80;">Delete</button>
        <a asp-area="Identity" asp-page="/Account/Manage/Admin" class="btn btn-secondary">Cancel</a>
    </form>
</div>