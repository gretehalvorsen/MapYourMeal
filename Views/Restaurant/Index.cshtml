@model MapYourMeal.Models.Restaurant 

<div class="container mt-4">
    <div class="row">
        <!-- Restaurant Details and Reviews -->
        <div class="col-md-6">
            <!-- Display restaurant details -->
            <h1 class="fw-bold">@Model.RestaurantName</h1>
            <p>@Model.Address, @Model.PostalCode, @Model.City</p>
            
            <!-- If there are reviews, display them -->
            <h3>Reviews</h3>
            @if (Model.Reviews != null && Model.Reviews.Any())
            {
                @foreach (var review in Model.Reviews)
                {
                    <div class="review-list mb-4 p-3 border rounded">
                        <p><strong>Note: </strong>"@review.Note"<br>
                        <strong>Dish: </strong>@review.Dish <br>
                        <strong>Dietary label: </strong>@(review.IsGlutenFree ? "|Glutenfree " : "")@(review.IsDairyFree ? "|Dairyfree " : "")@(review.IsVegan ? "|Vegan " : "") <br>
                        <strong>Rating:</strong> @review.Rating <br>
                        <strong>Written by: </strong>@(review.User?.UserName ?? "Unknown user") <br>
                        <strong>Date: </strong>@review.CreatedDate.ToString("MMMM dd, yyyy") <br> </p>
                        <img src="@Url.Action("GetImage", "Review", new { id = review.ReviewId })" alt="Review Image" style="max-width: 80px; max-height: 80px;" />
                    </div>
                }
            }
            else
            {
                <p>No reviews available.</p>
            }

            <!-- Register new review Button -->
            <div class="text-end">
                <a href="@Url.Action("Create", "Review", new { restaurantId = Model.RestaurantId })" 
                class="btn btn-secondary" 
                style="background-color: #2a5b80;">Register new review</a>
            </div>
        </div>

        <!-- Map -->
        <div class="col-md-6">
            <div id="map" style="height: 50vh; width: 100%;"></div>
        </div>
    </div>
</div>

<a href="@Url.Action("Index", "Home")" class="btn btn-success mt-4">Back to all restaurants</a>