@model MapYourMeal.Models.Review

<h2>Create New Review for "<i>@(Model.Restaurant?.RestaurantName ?? "Unknown Restaurant")</i>"</h2>
<p>@(Model.Restaurant?.Address ?? "Unknown Address"), @(Model.Restaurant?.PostalCode ?? "Unknown Postal Code"), @(Model.Restaurant?.City ?? "Unknown City")</p>
<br>

<!--<a href="/"> Eksempel form, ikke ferdig </a> -->


<form asp-action="Create" method="post" enctype="multipart/form-data">
    <p>Properties marked with <span class="text-danger">*</span> is required</p>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Dish">Dish (What did you eat?)</label><span class="text-danger">*</span>
        <input asp-for="Dish" class="form-control" />
        <span asp-validation-for="Dish" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating">Rating (0-10)</label><span class="text-danger">*</span>
        <input asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Note">Note (Thoughts about the dish)</label>
        <input asp-for="Note" class="form-control" />
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="IsGlutenFree" type="checkbox" class="form-check-input" />
        <label asp-for="IsGlutenFree">Is Gluten-Free</label>
        <span asp-validation-for="IsGlutenFree" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="IsDairyFree" type="checkbox" class="form-check-input" />
        <label asp-for="IsDairyFree">Is Dairy-Free</label>
        <span asp-validation-for="IsDairyFree" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="IsVegan" type="checkbox" class="form-check-input" />
        <label asp-for="IsVegan">Is Vegan</label>
        <span asp-validation-for="IsVegan" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageData">Image</label>
        <input asp-for="ImageData" type="file" name="image" accept="images/*" />
        <span asp-validation-for="ImageData" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserId">User Id</label>
        <input asp-for="UserId" class="form-control" readonly />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RestaurantId">Restaurant Id</label>
        <input asp-for="RestaurantId" class="form-control" readonly />
        <span asp-validation-for="RestaurantId" class="text-danger"></span>
        
    <!-- Blue button for Create Review -->
    <div class="text-end">
        <button type="submit" class="btn btn-primary btn-lg" style="background-color: #2a5b80; color: white;">Create</button>
    </div>

    <!-- Green button for View Restaurants -->
    <div class="text-end mt-2">
        <a href="@Url.Action("Index", "Home")" class="btn btn-success btn-lg">View Restaurants</a>
    </div>
</form>