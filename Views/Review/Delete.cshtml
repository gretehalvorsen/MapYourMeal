@model MapYourMeal.Models.Review

<h2>Delete Review</h2>

<h3>Are you sure you want to delete this review?</h3>
<div>
    <h4>Review</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Review Id</dt>
        <dd class="col-sm-10">@Model.ReviewId</dd>

        <dt class="col-sm-2">Note</dt>
        <dd class="col-sm-10">@Model.Note</dd>

        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@Model.Rating</dd>

        <dt class="col-sm-2">Dish Type</dt>
        <dd class="col-sm-10">@Model.Dish</dd>

        <dt class="col-sm-2">Image URL</dt>
        <dd class="col-sm-10">@Model.ImageData</dd>
    </dl> 
    
    <form asp-action="DeleteConfirmed" asp-route-ReviewId="@Model.ReviewId" method="post">
        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-action="Table" class="btn btn-secondary">Cancel</a>
    </form>
</div>