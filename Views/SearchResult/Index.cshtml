@model IEnumerable<MapYourMeal.Models.Restaurant>

@{
    ViewData["Title"] = "SearchResult";
    int index = 1;  // Manual index tracking
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            @foreach (var restaurant in Model)
            {
                <div class="row mb-4 p-3" style=" border: 2px solid black;">
                    <!-- Restaurant Image -->
                    <div class="col-3">
                        <img src="@restaurant.ImageUrl" alt="@restaurant.RestaurantName" class="img-fluid rounded" style="width: 100px; height: 100px;">
                    </div>

                    <!-- Restaurant Details -->
                    <div class="col-6">
                        <h5><strong>@index. @restaurant.RestaurantName</strong></h5>
                        <div>
                            @for (var i = 1; i <= 5; i++)
                            {
                                <!-- if (i <= restaurant.Reviews.Average(r => r.Rating))
                                {
                                    <span class="text-dark">★</span>
                                }
                                else
                                {
                                    <span class="text-muted">★</span>
                                } -->
                            }
                        </div>
                        <p>@restaurant.Address<br>@restaurant.City</p>
                    </div>

                    <!-- Save Button -->
                    <div class="col-3 text-end">
                        <a href="@Url.Action("Index", "Restaurant", new { restaurantId = restaurant.RestaurantId })" class="btn btn-secondary" style="background-color: #2a5b80;">
    Vis mer
</a>

                    </div>
                </div>
                index++;
            }
        </div>

        <!-- Map Placeholder -->
        <div class="col-md-6">
            <div class="map-placeholder" style="background-color: #E6E6E6; height: 500px;">
                <h3 class="text-center pt-5">Map Placeholder</h3>
            </div>
        </div>
    </div>
</div>
